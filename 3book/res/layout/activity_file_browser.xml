<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_bar_height"
        layout="@layout/view_top_bar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_light" >
      
        <TextView
            android:id="@+id/txt_file_path"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_dir_up"
           
            android:paddingBottom="@dimen/padding_m"
            android:paddingLeft="@dimen/padding_s"
            android:paddingRight="@dimen/padding_s"
            android:paddingTop="@dimen/padding_m"
            android:layout_alignParentRight="true"
            android:text="/sdcard/folder/subfolder/stuff"
            android:textColor="@color/font_dark" />
        
        <ImageButton
            android:id="@+id/btn_dir_up"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/up_one_dir"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>

    <ListView
        android:id="@+id/lst_book_browser"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@color/grey_light"
        android:background="@android:color/white" >
    </ListView>

</LinearLayout>