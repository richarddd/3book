<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/lay_file_path"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/actionbar_compat_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/action_bar_bottom_background"
        android:paddingLeft="@dimen/padding_l"
        android:paddingRight="@dimen/padding_l" >

        <TextView
            android:id="@+id/txt_file_path_info"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/current_path"
            android:textColor="@color/font_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_file_path"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/txt_file_path_info"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="/sdcard/folder/subfolder/stuff"
            android:textColor="@color/font_dark" />
    </RelativeLayout>
    <ListView
        android:id="@+id/lst_book_browser"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/lay_file_path"
        android:background="@android:color/white"
        android:fadingEdge="none" >
    </ListView>
</RelativeLayout>