    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="@dimen/book_nav_list_height"
        android:layout_height="@dimen/book_nav_list_height"
        android:layout_marginLeft="@dimen/padding_m"
        android:layout_marginRight="@dimen/padding_m" >

        <ImageView
            android:id="@+id/img_book_nav_item"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/default_background" />

        <TextView
            android:id="@+id/txt_book_nav_item"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
