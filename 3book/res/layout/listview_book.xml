<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/listview_one_row" >

    <ImageView
        android:id="@+id/img_book_cover"
        android:layout_width="@dimen/listview_one_row"
        android:layout_height="@dimen/listview_one_row"
        android:scaleType="centerCrop"
        android:src="@drawable/recent_book_cover" />

    <TextView
        android:id="@+id/txt_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/padding_m"
        android:layout_marginTop="@dimen/padding_m"
        android:layout_toLeftOf="@+id/chk_book"
        android:layout_toRightOf="@+id/img_book_cover"
        android:text="Title"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@color/font_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding_m"
        android:layout_toLeftOf="@+id/chk_book"
        android:layout_toRightOf="@+id/img_book_cover"
        android:text="John Doe"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@color/font_light" />

    <RatingBar
        android:id="@+id/bar_book_rating"
        style="@android:style/Widget.Holo.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/txt_book_author"
        android:layout_marginLeft="@dimen/padding_m"
        android:layout_toLeftOf="@+id/chk_book"
        android:layout_toRightOf="@+id/img_book_cover"
        android:numStars="5"
        android:stepSize="1.0" />
    <CheckBox
        android:id="@+id/chk_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

</RelativeLayout>