<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/shape_top_bar_background"
    android:layout_height="@dimen/top_bar_height" >

    <TextView
        android:id="@+id/txt_top_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:layout_marginLeft="@dimen/top_bar_content_margin"
        android:textStyle="bold"
        android:text="3Book"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btn_top_bar_search"
        android:layout_width="@dimen/top_bar_icon_size"
        android:layout_height="@dimen/top_bar_icon_size"
        android:background="@drawable/ic_top_bar_search" 
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/top_bar_content_margin"
         />

</RelativeLayout>