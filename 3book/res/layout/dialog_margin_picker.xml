<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_l"
    android:paddingRight="@dimen/padding_l" >

    <TextView
        android:id="@+id/txt_desc_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_m"
        android:layout_marginTop="@dimen/padding_m"
        android:text="@string/margin_top_bottom"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_l"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_bar_one"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bar_one"
            android:layout_alignTop="@+id/bar_one"
            android:layout_marginRight="@dimen/padding_m"
            android:gravity="center"
            android:text="0" />

        <SeekBar
            android:id="@+id/bar_one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_bar_one"
            android:max="100" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_desc_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_m"
        android:layout_marginTop="@dimen/padding_m"
        android:text="@string/margin_leftr_right"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/padding_l" >

        <TextView
            android:id="@+id/txt_bar_two"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bar_two"
            android:layout_alignTop="@+id/bar_two"
            android:layout_marginRight="@dimen/padding_m"
            android:gravity="center"
            android:text="0" />

        <SeekBar
            android:id="@+id/bar_two"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_bar_two"
            android:max="100" />
    </RelativeLayout>

</LinearLayout>