<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<ImageView 
	    
	    android:id="@+id/img_file_icon"
	    android:layout_width="@dimen/listview_one_row"
	    android:layout_height="@dimen/listview_one_row"
	    android:src="@drawable/ic_launcher"
	    android:paddingTop="@dimen/padding_m"
	    android:paddingBottom="@dimen/padding_m"
	    />
	<TextView android:id="@+id/txt_file_item_title"
		android:layout_width="fill_parent" android:textColor="#000000"
		android:layout_height="@dimen/listview_one_row" android:gravity="center_vertical"
		android:fadingEdge="horizontal" android:paddingRight="@dimen/padding_l"
		android:singleLine="true" android:text="Line one"
		style="@android:style/TextAppearance.Large" />
</LinearLayout>