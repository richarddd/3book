<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:background="@drawable/button"
	android:paddingRight="@dimen/padding_m"
	android:layout_height="wrap_content">
	<ImageView 
	    
	    android:id="@+id/img_file_icon"
	    android:layout_width="@dimen/icon_size_l"
	    android:layout_height="@dimen/icon_size_l"
	    android:src="@drawable/ic_launcher"
	    android:layout_margin="@dimen/padding_m" 
	    />
	<TextView android:id="@+id/txt_file_item_title"
		android:layout_width="fill_parent" android:layout_weight="1" android:textColor="@color/font_dark"
		android:layout_height="@dimen/listview_one_row" android:gravity="center_vertical"
		android:fadingEdge="horizontal" android:paddingRight="@dimen/padding_l"
		android:singleLine="true" android:text="Line one"
		style="@android:style/TextAppearance.Large" />

	<CheckBox
	    android:id="@+id/chk_file_browser"
	    android:visibility="gone"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent" />

</LinearLayout>